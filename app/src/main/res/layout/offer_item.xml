<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dark_gray"
    android:layout_margin="5dp"

    >

    <ImageView
        android:id="@+id/itemoffer_image"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/editable"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"

        />

    <TextView
        android:id="@+id/itemoffer_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/productsans"
        android:text="-50%"
        android:textColor="@color/yellow"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/itemoffer_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemoffer_image" />

    <TextView
        android:id="@+id/itemoffer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/productsans"
        android:text="devfest special tshirt"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemoffer_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemoffer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:drawableEnd="@drawable/coin"
        android:fontFamily="@font/productsans"
        android:text="150"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/itemoffer_image"
        app:layout_constraintTop_toBottomOf="@+id/itemoffer_text" />

    <LinearLayout
        android:id="@+id/itemoffer_buy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemoffer_image"
        app:layout_constraintTop_toBottomOf="@+id/itemoffer_price">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/productsans"
            android:text="@string/buynow"
            android:textColor="@color/white"
            android:textSize="15sp"

            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>